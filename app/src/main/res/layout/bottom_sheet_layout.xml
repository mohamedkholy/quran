<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sheet_bg"
    android:id="@+id/sheetContainer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Translation"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <RadioGroup
        android:id="@+id/translation_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">


        <RadioButton
            android:id="@+id/arabic_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arabic"
            android:textSize="18sp"
            android:textStyle="bold"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/english_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/urdu_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urdu"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:text="Select Qari"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/audio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">


        <RadioButton
            android:id="@+id/abdul_basit_murattal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abdul Basit Murattal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/abdul_wadood_haneef_rare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abdul Wadood Haneef Rare"
            android:textSize="18sp"
            android:textStyle="bold"
            />



    </RadioGroup>

   <Button
       android:id="@+id/save_setting_button"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Save"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"/>
</LinearLayout>